<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/play_list_view"   
    android:id="@+id/songlist_item1"
    >
    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="60dp"        
        android:orientation="vertical">       
        <ImageView 
            android:id="@+id/isplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:src="@drawable/play_list_played"
            android:visibility="gone"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="示例歌曲"/>
        <TextView 
            android:id="@+id/singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/song_name"
            android:layout_toRightOf="@+id/download_image"
            android:textColor="@android:color/darker_gray"
            android:text="12345"/>
        <ImageView 
            android:id="@+id/download_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/song_name"
            android:src="@drawable/order_item_mark"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="3"
        >
        <TextView 
            android:id="@+id/songlist_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:drawableBottom="@drawable/record_subscript_normal"
            android:focusable="false"
            android:background="@drawable/play_list_view"
            />
        
    </LinearLayout>

</LinearLayout>

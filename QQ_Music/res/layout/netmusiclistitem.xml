<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/play_list_view"   
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/netmusic_album_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon" />

    <TextView
        android:id="@+id/netmusic_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/netmusic_album_image"
        android:text="TITLE"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/netmusic_artist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/netmusic_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/netmusic_album_image"
        android:text="ARTIST"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/netmusic_download"
        android:layout_width="60dp"
        android:layout_height="60dp" 
        android:drawableBottom="@drawable/record_subscript_normal"        
        android:layout_toRightOf="@+id/netmusic_title"
        android:background="@drawable/play_list_view"
        />
</RelativeLayout>